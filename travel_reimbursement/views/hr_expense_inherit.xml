<odoo>
    <record id="view_hr_expense_form_inherit_mileage" model="ir.ui.view">
        <field name="name">hr.expense.form.inherit.mileage</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">

            <!-- Insert the notebook at the end of the sheet -->
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Mileage Expenses" invisible="not show_mileage_tab">
                        <field name="mileage_expense_ids">
                            <list editable="bottom">
                                <field name="date"/>
                                <field name="from_location"/>
                                <field name="to_location"/>
                                <field name="distance"/>
                            </list>
                            <form>
                                <group>
                                    <field name="date"/>
                                    <field name="from_location"/>
                                    <field name="to_location"/>
                                    <field name="distance"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </notebook>
            </xpath>

        </field>
    </record>
</odoo>
