<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_department_inherit_approval" model="ir.ui.view">
        <field name="name">hr.department.inherit.approval</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <!-- Insert custom fields after parent_id -->
            <xpath expr="//field[@name='manager_id']" position="after">
                <field name="approval_hr_id" widget="many2one_avatar_employee"/>
            </xpath>
        </field>
    </record>
</odoo>