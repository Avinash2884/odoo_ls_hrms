<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_job_inherit_approval" model="ir.ui.view">
        <field name="name">hr.job.inherit.approval</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="approval_experience_minimum"/>
                <field name="approval_experience_maximum"/>
            </xpath>
            <xpath expr="//field[@name='interviewer_ids']" position="after">
                <field name="approval_overall_budget_for_all_posting"/>
                <field name="approval_budget_for_each_employee_position"/>
            </xpath>

        </field>
    </record>
</odoo>
