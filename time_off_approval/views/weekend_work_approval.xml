<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_weekend_work_approval_form" model="ir.ui.view">
        <field name="name">weekend.work.approval.form</field>
        <field name="model">weekend.work.approval</field>
        <field name="arch" type="xml">
            <form string="Weekend Work Approval">
                <header>
                    <button name="action_submit"
                            string="Submit"
                            type="object"
                            class="btn-primary"
                            invisible="state in ('draft','approved','rejected')"/>
                    <button name="action_approve"
                            string="Approve"
                            type="object"
                            class="btn-success"
                            invisible="state in ('approved','rejected', False)"
                            groups="hr_holidays.group_hr_holidays_user"/>
                    <button name="action_reject"
                            string="Reject"
                            type="object"
                            class="btn-danger"
                            invisible="state in ('approved','rejected', False)"
                            groups="hr_holidays.group_hr_holidays_user"/>
                    <field name="state" readonly="1" widget="statusbar"
                               statusbar_visible="draft,approved,rejected"/>
                </header>
                <sheet>
                    <group>
                        <field name="employee_id" readonly="1" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        <field name="working_day" readonly="state in ('draft','approved','rejected')"/>
                        <field name="work_date" readonly="state in ('draft','approved','rejected')"/>
                        <field name="reason" readonly="state in ('draft','approved','rejected')"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_weekend_work_approval_list" model="ir.ui.view">
        <field name="name">weekend.work.approval.list</field>
        <field name="model">weekend.work.approval</field>
        <field name="arch" type="xml">
            <list string="Weekend Work Approvals">
                <field name="employee_id"/>
                <field name="working_day"/>
                <field name="work_date"/>
                <field name="reason"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Menu & Action -->
    <record id="action_weekend_work_approval" model="ir.actions.act_window">
        <field name="name">Weekend Work Approvals</field>
        <field name="res_model">weekend.work.approval</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Submit your weekend work approval requests here.
            </p>
        </field>
    </record>

    <menuitem id="menu_weekend_work_approval"
              name="Weekend Work Approval"
              parent="hr_holidays.menu_hr_holidays_my_leaves"
              action="action_weekend_work_approval"
              sequence="10"/>

</odoo>
